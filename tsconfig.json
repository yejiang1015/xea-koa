{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "esnext.asynciterable"],
    "rootDir": "./",
    "baseUrl": "./",
    "newLine": "CRLF",
    "allowJs": false,
    "skipDefaultLibCheck": true,
    /** 生成 d.ts */
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules/**", "build/**"]
}
